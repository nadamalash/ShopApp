<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShopApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_grey_600</item>
        <item name="colorPrimaryVariant">@color/blue_grey_50</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_grey_600</item>
        <item name="colorSecondaryVariant">@color/blue_grey_600</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- To hide action bar -->
    <style name="Theme.ShopApp.NoActionBar" parent="Theme.ShopApp">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Change status bar color in splash screen -->
    <style name="Theme.ShopApp.NoActionBar.ChangeStatusBarColor" parent="Theme.ShopApp.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
    </style>

    <!-- TextInputLayout style -->
    <style name="MSPTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint" >@color/light_grey</item>
        <item name="startIconTint" >@color/light_grey</item>
        <item name="endIconTint" >@color/light_grey</item>
        <item name="boxStrokeColor" >@color/blue_grey_600</item>
        <item name="boxCornerRadiusTopStart" >@dimen/main_btn_radius</item>
        <item name="boxCornerRadiusTopEnd" >@dimen/main_btn_radius</item>
        <item name="boxCornerRadiusBottomStart" >@dimen/main_btn_radius</item>
        <item name="boxCornerRadiusBottomEnd" >@dimen/main_btn_radius</item>
    </style>

    <!-- MainButton style -->
    <style name="MainButton" parent="Widget.AppCompat.Button">
        <item name="android:background" >@drawable/main_btn</item>
        <item name="android:textColor" >@color/white</item>
        <item name="android:textSize" >@dimen/login_btn_text_size</item>
        <item name="android:foreground" >?attr/selectableItemBackground</item>
    </style>

</resources>